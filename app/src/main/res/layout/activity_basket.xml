    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="409dp"
        android:layout_height="76dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/MainBttHome"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:layout_marginLeft="4px"
            android:layout_marginEnd="4px"
            android:layout_weight="1"
            android:onClick="home"
            android:text="@string/homeBttTxt"  />

        <Button
            android:id="@+id/MainBttLan"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:layout_marginLeft="4px"
            android:layout_marginEnd="4px"
            android:layout_weight="1"
            android:onClick="changeLanguage"
            android:text="@string/lenguageBttTxt" />

        <Button
            android:id="@+id/BktClear"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:layout_marginLeft="4px"
            android:layout_marginEnd="4px"
            android:layout_weight="1"
            android:onClick="clear"
            android:text="@string/BktBttclear" />

        <Button
            android:id="@+id/BktBuy"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:layout_marginLeft="4px"
            android:layout_marginEnd="4px"
            android:layout_weight="1"
            android:onClick="buy"
            android:text="@string/BktBttbuy" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="407dp"
        android:layout_height="81dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/BsktTxtUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8px"
            android:layout_weight="3"
            android:text="@string/BktTxtTu_cesta"
            android:textSize="34sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="47dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        tools:layout_editor_absoluteX="2dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textAlignment="viewEnd"
            android:textSize="34sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>